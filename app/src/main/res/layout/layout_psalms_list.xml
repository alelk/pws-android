<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:minWidth="50dip"
        android:layout_marginRight="12dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="13"
        android:id="@+id/txt_psalm_number"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Psalm Name"
        android:id="@+id/txt_psalm_name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txt_psalm_number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Psalm Text 1\nPsalm Text 2"
        android:id="@+id/txt_psalm_text"
        android:layout_below="@+id/txt_psalm_name"
        android:layout_toEndOf="@+id/txt_psalm_number" />
</RelativeLayout>