<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="6dp"
    style="@style/CardStyle"
    android:id="@+id/cv_search">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/CardStyle.PsalmNumber"
            android:id="@+id/txt_psalm_number"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                style="@style/CardStyle.PsalmName"
                android:id="@+id/txt_psalm_name" />

            <TextView
                style="@style/CardStyle.BookName"
                android:id="@+id/txt_book_name" />

            <TextView
                style="@style/CardStyle.PsalmText"
                android:id="@+id/txt_text" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>