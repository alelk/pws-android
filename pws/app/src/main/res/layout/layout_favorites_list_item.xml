<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/cardStyle"
    android:id="@+id/cv_favorite">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="?attr/textStyleCardPsalmNumber"
            android:id="@+id/txt_psalm_number"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">
            <TextView
                style="?attr/textStyleCardPsalmName"
                android:id="@+id/txt_psalm_name"
                android:layout_marginBottom="6dp"/>
            <TextView
                style="?attr/textStyleCardBookName"
                android:id="@+id/txt_book_name"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>