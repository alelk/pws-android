<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="android:textColorPrimary">@color/color_text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/color_text_primary_inverse</item>
        <item name="android:textColorSecondary">@color/color_text_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/color_text_secondary_inverse</item>
        <item name="android:windowBackground">@color/color_window_background</item>
        <item name="android:colorForeground">@color/color_foreground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Psalm">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme.Psalm.Header">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_text_psalm_header</item>
    </style>

    <style name="AppTheme.Psalm.Header.BibleRef">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_text_secondary_inverse</item>
    </style>

    <style name="AppTheme.Psalm.Header.PsalmNumber">
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/color_text_psalm_header</item>
    </style>

    <style name="AppTheme.Psalm.Header.BookName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_psalm_header</item>
    </style>

</resources>
