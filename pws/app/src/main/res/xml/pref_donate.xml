<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference android:selectable="false"
        android:title="@string/pref_donate_title"
        android:summary="@string/pref_donate_summary"/>

    <PreferenceCategory android:title="@string/pref_donate_yandexmoney_title">
        <Preference android:title="@string/pref_donate_yandexmoney_wallet_number_title"
            android:summary="@string/pref_donate_yandexmoney_wallet_number_summary"
            android:icon="@drawable/ic_yandexmoney">
            <intent android:action="android.intent.action.VIEW"
                android:data="@string/pref_donate_yandexmoney_wallet_number_link"/>
        </Preference>
        <Preference
            android:title="@string/pref_donate_yandexmoney_web_form_title"
            android:summary="@string/pref_donate_yandexmoney_web_form_summary"
            android:icon="@drawable/ic_yandexmoney">
            <intent android:action="android.intent.action.VIEW"
                android:data="@string/pref_donate_yandexmoney_web_form_link"/>
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_donate_paypal_title">
        <Preference
            android:title="@string/pref_donate_paypal_web_form_title"
            android:summary="@string/pref_donate_paypal_web_form_summary"
            android:icon="@drawable/ic_paypal">
            <intent android:action="android.intent.action.VIEW"
                android:data="@string/pref_donate_paypal_web_form_link"/>
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>